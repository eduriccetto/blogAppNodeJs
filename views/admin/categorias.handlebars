<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nome: {{this.nome}}</h4>
            <small>Slug: {{this.slug}}</small>
            <br>
            <small>Data de criação: {{date}}</small>
            <br>
            <div style="display: flex; flex-direction:row;">
                <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar categoria</button></a>
                <form action="/admin/categorias/deletar/{{_id}}" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger mt-2 mx-3">Deletar categoria</button>
                </form>
            </div>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}